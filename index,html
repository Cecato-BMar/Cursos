    <script>
        // Countdown Timer Animation
        function animateCountdown() {
            const days = document.getElementById('days');
            const hours = document.getElementById('hours');
            const minutes = document.getElementById('minutes');
            const seconds = document.getElementById('seconds');
            
            setInterval(() => {
                // Simulate countdown animation
                let currentSeconds = parseInt(seconds.textContent);
                currentSeconds = currentSeconds > 0 ? currentSeconds - 1 : 59;
                seconds.textContent = currentSeconds.toString().padStart(2, '0');
                
                if (currentSeconds === 59) {
                    let currentMinutes = parseInt(minutes.textContent);
                    currentMinutes = currentMinutes > 0 ? currentMinutes - 1 : 59;
                    minutes.textContent = currentMinutes.toString().padStart(2, '0');
                    
                    if (currentMinutes === 59) {
                        let currentHours = parseInt(hours.textContent);
                        currentHours = currentHours > 0 ? currentHours - 1 : 23;
                        hours.textContent = currentHours.toString().padStart(2, '0');
                        
                        if (currentHours === 23) {
                            let currentDays = parseInt(days.textContent);
                            currentDays = currentDays > 0 ? currentDays - 1 : 30;
                            days.textContent = currentDays.toString().padStart(2, '0');
                        }
                    }
                }
            }, 1000);
        }

        // Form submission
        document.querySelectorAll('.cta-button').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                this.textContent = 'INSCRITO! ‚úì';
                this.style.background = 'linear-gradient(45deg, #28a745, #20c997)';
                setTimeout(() => {
                    this.textContent = 'QUERO PARTICIPAR';
                    this.style.background = 'linear-gradient(45deg, #14a085, #0d4377)';
                }, 2000);
            });
        });

        // Start countdown animation
        animateCountdown();

        // Add scroll animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.feature-card, .step-card').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(20px)';
            el.style.transition = 'all 0.6s ease';
            observer.observe(el);
        });
    </script>
